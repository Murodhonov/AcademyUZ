<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Fragments.EditCourseFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_course_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20sp"
            android:text="Android Development"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/images"
            android:layout_width="130dp"
            android:layout_height="110sp"
            android:src="@drawable/android" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:text="Kursga boshqa rasm qoâ€™shish"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/name_course"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="20sp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edt_bg"
            android:hint="@string/kurs_nomi"
            android:paddingStart="20sp"
            android:textColor="#A09C9C"
            android:textColorHint="#A09C9C"
            tools:ignore="RtlSymmetry" />

        <ImageView
            android:id="@+id/edit_course"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20sp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/fab_bg"
            android:elevation="10dp"
            android:padding="15dp"
            android:src="@drawable/checked_1" />


    </LinearLayout>

</LinearLayout>