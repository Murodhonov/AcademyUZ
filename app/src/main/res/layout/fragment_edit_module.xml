<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Fragments.EditModuleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/course_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20sp"
            android:text="Sozlamalar"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/name_edt"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="20sp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edt_bg"
            android:hint="Modul nomi"
            android:inputType="text"
            android:paddingStart="20sp"
            android:textColor="#A09C9C"
            android:textColorHint="#A09C9C"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/pos_edt"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="20sp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edt_bg"
            android:hint="Modul o'rni"
            android:inputType="phone"
            android:paddingStart="20sp"
            android:textColor="#A09C9C"
            android:textColorHint="#A09C9C"
            tools:ignore="RtlSymmetry" />

        <ImageView
            android:id="@+id/change"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20sp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/fab_bg"
            android:elevation="10dp"
            android:padding="15dp"
            android:src="@drawable/checked_1" />

    </LinearLayout>

</LinearLayout>